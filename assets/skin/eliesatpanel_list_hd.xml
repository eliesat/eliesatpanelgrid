        position="900,120" size="333,23" zPosition="12"
        font="Bold;21" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %A %d %B</convert>
    </widget>

    <widget source="global.CurrentTime" render="Label"
        position="900,147" size="333,23" zPosition="12"
        font="Bold;21" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %H:%M:%S</convert>
    </widget>

   <!-- Item Name -->
<widget name="item_name" position="0,560" size="1280,40" zPosition="12"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1"/>

<!-- Download Info (single line, full width) -->
