<screen name="bootlogos" position="0,0" size="1280,720" backgroundColor="transparent" flags="wfNoBorder">

    <!-- ================= BACKGROUND ================= -->
    <ePixmap position="0,0" size="1280,720" zPosition="0"
        pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/background/panel_bg.jpg"
        transparent="0" />

    <!-- ================= TOP BAR ================= -->
    <eLabel position="0,0" size="1280,80" zPosition="10" backgroundColor="#000000" />

    <!-- Title -->
    <eLabel text="● PiconStudio – Download, Manage and Control your picons"
        position="20,0" size="1240,40" zPosition="11"
        font="Bold;24" halign="left" valign="center" noWrap="1"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <!-- ================= SIDE BARS ================= -->
    <eLabel position="0,80" size="50,640" zPosition="10" backgroundColor="#000000" />
    <eLabel position="1230,80" size="50,640" zPosition="10" backgroundColor="#000000" />

    <!-- Left / Right bars text -->
    <widget name="left_bar"
        position="10,100" size="40,600" zPosition="20"
        font="Regular;20" halign="center" valign="top"
        foregroundColor="yellow" transparent="0" noWrap="1" />

    <widget name="right_bar"
        position="1240,100" size="40,600" zPosition="20"
        font="Regular;20" halign="center" valign="top"
        foregroundColor="yellow" transparent="0" noWrap="1" />

    <!-- ================= MENU LIST (HD) ================= -->
    <widget 
        name="menu" 
        source="menu" 
        render="Listbox" 
        selectionPixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/icon/selection.png"
        position="60,100" size="1160,420" 
        transparent="1" zPosition="15"
        scrollbarMode="showOnDemand">
        <convert type="TemplatedMultiContent">
            {
                "template": [
                    MultiContentEntryText(pos = (70, 5), size = (520, 30), font=0, flags = RT_HALIGN_LEFT,
                                          color=0x00D2AC2B, text = 0, transparent=1),
                    MultiContentEntryText(pos = (600, 10), size = (400, 25), font=1, flags = RT_HALIGN_LEFT,
                                          color=0x00D2AC2B, text = 1, transparent=1),
                    MultiContentEntryPixmapAlphaTest(pos = (35, 9), size = (30, 25), png = 2)
                ],
                "fonts": [gFont("Regular", 24), gFont("Regular", 18)],
                "itemHeight": 50
            }
        </convert>
    </widget>

    <!-- ================= SELECTED COUNT ================= -->
    <widget name="selection_count" position="940,500" size="300,30" zPosition="16"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <!-- ================= COLOR BUTTONS ================= -->
    <eLabel position="0,690" size="320,5" zPosition="2" backgroundColor="red" />
    <widget name="key_red" position="0,620" size="320,70" zPosition="3"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="320,690" size="320,5" zPosition="2" backgroundColor="green" />
    <widget name="key_green" position="320,620" size="320,70" zPosition="3"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="640,690" size="320,5" zPosition="2" backgroundColor="yellow" />
    <widget name="key_yellow" position="640,620" size="320,70" zPosition="3"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="960,690" size="320,5" zPosition="2" backgroundColor="blue" />
    <widget name="key_blue" position="960,620" size="320,70" zPosition="3"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <!-- ================= SYSTEM INFO ================= -->
    <widget name="image_name" position="940,300" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="python_ver" position="940,330" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="local_ip" position="940,360" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="StorageInfo" position="940,390" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="RAMInfo" position="940,420" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="net_status" position="940,450" size="300,25" zPosition="12"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <!-- ================= DATE / CLOCK ================= -->
    <widget source="global.CurrentTime" render="Label"
        position="900,100" size="380,25" zPosition="12"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %A %d %B</convert>
    </widget>

    <widget source="global.CurrentTime" render="Label"
        position="900,130" size="380,25" zPosition="12"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %H:%M:%S</convert>
    </widget>

    <!-- ================= ITEM & DOWNLOAD INFO ================= -->
    <widget name="item_name" position="0,540" size="1280,40" zPosition="12"
        font="Bold;28" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1"/>

    <widget name="download_info" position="10,580" size="1260,40" zPosition="12"
        font="Bold;22" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <!-- ================= PROGRESS BAR ================= -->
    <widget name="progress" position="40,620" size="1200,20"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1"
        zPosition="13" />

</screen>

