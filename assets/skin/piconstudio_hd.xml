<screen name="Piconstudio" position="0,0" size="1280,720" backgroundColor="transparent" flags="wfNoBorder" title="Scripts">

    <!-- Background -->
    <ePixmap position="0,0" size="1280,720" zPosition="-1"
        pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/background/panel_bg.png"/>

    <ePixmap position="0,0" size="1280,720" zPosition="1"
        pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/background/panel_bg.jpg"
        transparent="0" alphatest="blend" />

    <!-- Top black bar -->
    <eLabel position="0,0" size="1280,90" zPosition="10" backgroundColor="#000000" />

    <!-- Title -->
    <eLabel text="â— Piconstudio"
        position="230,0" size="900,40" zPosition="11"
        font="Bold;28" halign="left" valign="center" noWrap="1"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <!-- Bottom color buttons -->
    <eLabel position="0,715" size="320,5" zPosition="2" backgroundColor="red" />
    <widget name="red" position="0,670" size="320,45" zPosition="2"
        font="Bold;26" halign="center" valign="center"
        text="Red Button"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <eLabel position="320,715" size="320,5" zPosition="2" backgroundColor="green" />
    <widget name="green" position="320,670" size="320,45" zPosition="2"
        font="Bold;26" halign="center" valign="center"
        text="Green Button"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <eLabel position="640,715" size="320,5" zPosition="2" backgroundColor="yellow" />
    <widget name="yellow" position="640,670" size="320,45" zPosition="2"
        font="Bold;26" halign="center" valign="center"
        text="Yellow Button"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <eLabel position="960,715" size="320,5" zPosition="2" backgroundColor="blue" />
    <widget name="blue" position="960,670" size="320,45" zPosition="2"
        font="Bold;26" halign="center" valign="center"
        text="Blue Button"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <!-- Side bars -->
    <eLabel position="0,90" size="55,580" zPosition="10" backgroundColor="#000000" />
    <eLabel position="1225,90" size="55,580" zPosition="10" backgroundColor="#000000" />

    <!-- Date -->
    <widget source="global.CurrentTime" render="Label"
        position="900,120" size="350,30" zPosition="12"
        font="Bold;26" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1">
        <convert type="ClockToText">Format %A %d %B</convert>
    </widget>

    <!-- Clock -->
    <widget source="global.CurrentTime" render="Label"
        position="900,155" size="350,30" zPosition="12"
        font="Bold;26" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1">
        <convert type="ClockToText">Format %H:%M:%S</convert>
    </widget>

    <!-- IMAGE NAME: under last satname and centered -->
    <widget name="image_name"
        position="100,600" size="800,40" zPosition="12"
        font="Bold;28" halign="center" valign="center"
        foregroundColor="orange"
        transparent="1" />

    <!-- Right info panel -->
    <widget name="python_ver"
        position="900,240" size="350,30" zPosition="12"
        font="Bold;26" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <widget name="local_ip"
        position="900,275" size="350,30" zPosition="12"
        font="Bold;26" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <widget name="StorageInfo"
        position="900,310" size="350,30" zPosition="12"
        font="Bold;26" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <widget name="RAMInfo"
        position="900,345" size="350,30" zPosition="12"
        font="Bold;26" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <widget name="net_status"
        position="900,380" size="350,30" zPosition="12"
        font="Bold;26" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <!-- Side text -->
    <widget name="left_bar"
        position="15,110" size="40,500" zPosition="20"
        font="Regular;22" halign="center" valign="top"
    backgroundColor="#000000"
        foregroundColor="yellow" transparent="1" noWrap="1" />

    <widget name="right_bar"
        position="1230,110" size="40,500" zPosition="20"
        font="Regular;22" halign="center" valign="top"
    backgroundColor="#000000"
        foregroundColor="yellow" transparent="1" noWrap="1" />

    <!-- SATELLITE MENU -->
    <widget name="sat_menu"
        position="100,120" size="800,480" zPosition="12"
        font="Bold;28" halign="left" valign="center"
        foregroundColor="yellow"
        scrollbarMode="showOnDemand" itemHeight="40"
        selectionPixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/icon/selection.png"
        transparent="1" />

</screen>
