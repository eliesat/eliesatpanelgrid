<screen name="bootlogos" position="0,0" size="1920,1080" backgroundColor="transparent" flags="wfNoBorder">

    <!-- ================= BACKGROUND (MUST BE FIRST) ================= -->
    <ePixmap position="0,0" size="1920,1080" zPosition="0"
        pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/background/panel_bg.jpg"
        transparent="0" />

    <!-- ================= TOP BAR ================= -->
    <eLabel position="0,0" size="1920,130" zPosition="10" backgroundColor="#000000" />

    <!-- Title -->
    <eLabel text="● Welcome to ElieSatPanel – Enjoy the best plugins, addons and tools for your E2 box."
        position="350,0" size="1400,50" zPosition="11"
        font="Bold;32" halign="left" valign="center" noWrap="1"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <!-- ================= SIDE BARS ================= -->
    <eLabel position="0,130" size="80,870" zPosition="10" backgroundColor="#000000" />
    <eLabel position="1840,130" size="80,870" zPosition="10" backgroundColor="#000000" />

    <!-- Left / Right bars text -->
    <widget name="left_bar"
        position="10,160" size="60,760" zPosition="20"
        font="Regular;26" halign="center" valign="top"
        foregroundColor="yellow" transparent="0" noWrap="1" />

    <widget name="right_bar"
        position="1850,160" size="60,760" zPosition="20"
        font="Regular;26" halign="center" valign="top"
        foregroundColor="yellow" transparent="0" noWrap="1" />

    <widget source="menu" selectionPixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/icon/selection.png" render="Listbox" position="48,170" size="1280,660" transparent="1" zPosition="15" scrollbarMode="showOnDemand">
    <convert type="TemplatedMultiContent">
        {
            "template": [
                MultiContentEntryPixmapAlphaTest(pos = (60, 13), size = (50, 40), png = 0),
                MultiContentEntryText(pos = (120, 8), size = (420, 45), font=0, flags = RT_HALIGN_LEFT, color=0x00D2AC2B, text = 1),
                MultiContentEntryText(pos = (560, 8), size = (200, 45), font=1, flags = RT_HALIGN_LEFT, color=0x00D2AC2B, text = 2),
                MultiContentEntryText(pos = (740, 18), size = (700, 50), font=2, flags = RT_HALIGN_LEFT, color=0x00D2AC2B, text = 3)
            ],
            "fonts": [
                gFont("Regular", 35),   # font index 0 for text 1
                gFont("Regular", 35),   # font index 1 for text 2
                gFont("Regular", 28)    # font index 2 for text 3
            ],
            "itemHeight": 66
        }
    </convert>
</widget>

    <!-- ================= SELECTED COUNT ================= -->
    <widget name="selection_count" position="1470,660" size="400,40" zPosition="16"
        font="Bold;34" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="1" />

    <!-- ================= COLOR BUTTONS ================= -->
    <eLabel position="0,1075" size="480,5" zPosition="2" backgroundColor="red" />
    <widget name="key_red" position="0,1000" size="480,75" zPosition="3"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="480,1075" size="480,5" zPosition="2" backgroundColor="green" />
    <widget name="key_green" position="480,1000" size="480,75" zPosition="3"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="960,1075" size="480,5" zPosition="2" backgroundColor="yellow" />
    <widget name="key_yellow" position="960,1000" size="480,75" zPosition="3"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <eLabel position="1440,1075" size="480,5" zPosition="2" backgroundColor="blue" />
    <widget name="key_blue" position="1440,1000" size="480,75" zPosition="3"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" />

    <!-- ================= SYSTEM INFO ================= -->
    <widget name="image_name" position="1470,420" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="python_ver" position="1470,460" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="local_ip" position="1470,500" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="StorageInfo" position="1470,540" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="RAMInfo" position="1470,580" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <widget name="net_status" position="1470,620" size="500,35" zPosition="12"
        font="Bold;32" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

    <!-- ================= DATE / CLOCK ================= -->
    <widget source="global.CurrentTime" render="Label"
        position="1350,180" size="500,35" zPosition="12"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %A %d %B</convert>
    </widget>

    <widget source="global.CurrentTime" render="Label"
        position="1350,220" size="500,35" zPosition="12"
        font="Bold;32" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %H:%M:%S</convert>
    </widget>

   <!-- Item Name -->
<widget name="item_name" position="0,840" size="1920,60" zPosition="12"
        font="Bold;36" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1"/>

<!-- Download Info (single line, full width) -->
<widget name="download_info" position="0,910" size="1920,100" zPosition="12"
        font="Bold;32" halign="center" valign="left"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1" />

<!-- Progress Bar -->
<widget name="progress" position="560,910" size="800,18"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1"
        zPosition="13" />

</screen>

