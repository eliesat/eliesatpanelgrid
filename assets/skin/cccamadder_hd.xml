<screen name="ProtocolEditorScreen" position="0,0" size="1280,720" backgroundColor="transparent">

    <!-- Background -->
    <ePixmap position="0,0" zPosition="-1" size="1280,720"
        pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/background/panel_bg.jpg"/>

    <!-- Top bar -->
    <eLabel position="0,0" size="1280,87" zPosition="10" backgroundColor="#000000" />
    <eLabel text="â— Subscription Editor"
        position="493,0" size="900,32" zPosition="11"
        font="Bold;24" halign="left" valign="center"
        foregroundColor="yellow" backgroundColor="#000000"
        transparent="0" />

    <!-- Bottom buttons -->
    <eLabel position="0,715" size="320,5" zPosition="2" backgroundColor="red" />
    <widget name="red" position="0,660" size="320,55" zPosition="2"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="0" />

    <eLabel position="320,715" size="320,5" zPosition="2" backgroundColor="green" />
    <widget name="green" position="320,660" size="320,55" zPosition="2"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="0" />

    <eLabel position="640,715" size="320,5" zPosition="2" backgroundColor="yellow" />
    <widget name="yellow" position="640,660" size="320,55" zPosition="2"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="0" />

    <eLabel position="960,715" size="320,5" zPosition="2" backgroundColor="blue" />
    <widget name="blue" position="960,660" size="320,55" zPosition="2"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="0" />

    <!-- Side bars -->
    <eLabel position="0,87" size="55,580" zPosition="2" backgroundColor="#000000" />
    <eLabel position="1225,87" size="55,580" zPosition="2" backgroundColor="#000000" />

    <!-- System info -->
    <widget source="global.CurrentTime" render="Label"
        position="900,113" size="334,23" zPosition="12"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %A %d %B</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label"
        position="900,140" size="334,23" zPosition="12"
        font="Bold;24" halign="center" valign="center"
        foregroundColor="yellow" backgroundColor="#000000" transparent="1">
        <convert type="ClockToText">Format %H:%M:%S</convert>
    </widget>

    <widget name="image_name" position="980,280" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />
    <widget name="python_ver" position="980,300" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />
    <widget name="local_ip" position="980,320" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />
    <widget name="StorageInfo" position="980,340" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />
    <widget name="RAMInfo" position="980,360" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />
    <widget name="net_status" position="980,380" size="300,23" zPosition="12"
        font="Bold;20" halign="left" valign="center" foregroundColor="yellow"
        backgroundColor="#000000" transparent="1" />

    <!-- Config list -->
    <widget name="config" position="100,113" size="733,600"
        font="Bold;24" itemHeight="33"
        foregroundColor="yellow"
        transparent="1" scrollbarMode="showOnDemand"
        enableWrapAround="1"
        valign="center"
        selectionPixmap="/usr/lib/enigma2/python/Plugins/Extensions/ElieSatPanelGrid/assets/icon/selection.png"
    />

    <!-- Left / Right vertical bars (fixed like EliesatPanel) -->
    <widget name="left_bar"
        position="15,110" size="40,500" zPosition="20"
        font="Regular;18" halign="center" valign="top"
        backgroundColor="#000000"
        foregroundColor="yellow" transparent="1" noWrap="1" />

    <widget name="right_bar"
        position="1235,110" size="40,500" zPosition="20"
        font="Regular;18" halign="center" valign="top"
        backgroundColor="#000000"
        foregroundColor="yellow" transparent="1" noWrap="1" />

</screen>

